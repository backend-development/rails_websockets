<%= form_for @adventure, :html => { :class => 'form-horizontal' } do |f| %>
  <%= control_group do %>
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field input-xxlarge' %>
    </div>
  <% end %>
  <%= control_group do %>
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :size => "80x20", :class => 'text_area input-xxlarge'%>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                adventure_path( @adventure ), :class => 'btn' %>
  </div>
<% end %>

<% content_for :script do %>
  $(document).on("page:change", function() {
    // test if toolbar already exists
    if( $('.wysihtml5-toolbar').length == 0 ) {
      $('#adventure_description').wysihtml5();
    }
  });
<% end %>
