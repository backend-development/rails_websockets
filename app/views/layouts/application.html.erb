<!DOCTYPE html>
<html>
  <head>
    <title>Stepstones</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %> 
      <%= current_user %>
      <%= link_to "log out", logout_path %>
    <% else %>
      <%= link_to "log in", "/auth/fhs_full/" %> 
      <% if ENV['RAILS_ENV'] == 'development' %>
        <%= link_to "log in without password", "/auth/testing" %> 
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
