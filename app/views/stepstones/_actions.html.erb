<% if @current_step and @current_step.user_action? %>
  my state: <%= @current_step.state %>

  <% @current_step.state_events.each do |transition| %>
    <%= link_to transition, transition_path( @adventure, @stepstone, transition), :method => 'post', :remote => true , :class => 'btn btn-danger' %>
  <% end %>
<% elsif @current_step %>
  my state: <%= @current_step.state %>
<% elsif current_user %>
  <%= link_to "Join!", join_stepstone_path( @adventure, @stepstone ), :method => 'post', :class => 'btn btn-danger', :remote => true %>
<% end %>
