<% if user_signed_in? and @working %>

  <% step = stepstone.steps.group_by(&:user_id)[current_user.id].first %>

  <%= form_for step do |f| %>
    <%= f.select(
         :status, 
         options_for_select(
         Step.statuses, 
         step.status)) %>
    <%= f.submit 'set' %>
  <% end %>

<% end %>