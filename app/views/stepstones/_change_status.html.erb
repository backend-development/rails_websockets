<% if user_signed_in? and @working %>

  <% step = stepstone.steps.group_by(&:user_id)[current_user.id].first %>

  <%= form_for step do |f| %>
    <%= collection_select(:step, :status_id, Status.all, :id, :status, 
          :selected => step.status_id) %>
    <%= f.submit 'set' %>
  <% end %>

<% end %>