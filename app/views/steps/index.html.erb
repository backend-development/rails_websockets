<%- model_class = Step -%>
<div class="page-header">
  <h1><small>Steps in</small> <%= @adventure.title %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.id %></td>
        <td><%= link_to step.title, adventure_step_path(step.adventure, step) %></td>
        <td><%= step.description %></td>
        <td><%=l step.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_adventure_step_path(@adventure, step), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      adventure_step_path(@adventure, step),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_adventure_step_path(@adventure),
            :class => 'btn btn-primary' %>
