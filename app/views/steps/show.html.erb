<%- model_class = Step -%>
<div class="page-header">
  <h1><%= @step.title %></h1>
</div>

<%= @step.description %>

<% content_for :sidebar do %>
  <%= link_to t('.back', :default => "back to the adventure"),
    adventure_path(@adventure), :class => 'btn'  %>
  <%= link_to t('.edit', :default => "edit this step"),
              edit_adventure_step_path(@adventure,@step), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => "delete this step"),
              adventure_step_path(@adventure, @step),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<% end %>
