.js-only { display: none; }

.stepstone_image {
  background-image: url(<%= asset_path 'Himalayan_Garden_Harewood_02.jpg' %>);
  background-repeat: no-repeat;
  overflow: hidden;
  height: 400px;
}

footer {
  background-color: #F5F5F5;
  border-top: 1px solid #E5E5E5;
  margin-top: 70px;
  padding: 70px 0px;
}

#sortable_stepstones { 
  margin-left: 55px; 
}

#sortable_stepstones .handle {
  cursor: move;
  display: none;
}

#sortable_stepstones li {
  padding: 10px 0;
}
#sortable_stepstones .description {
  display: block;
}

form.button_to , form.button_to div { display: inline; }
